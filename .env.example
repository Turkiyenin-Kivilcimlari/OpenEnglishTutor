# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/openenglishttutor"
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# AI Services
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_CLOUD_PROJECT_ID="your-google-cloud-project-id"
GOOGLE_CLOUD_KEY_FILE="./service-account.json"

# File Storage (AWS S3 or Google Cloud Storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="openenglishttutor-files"
AWS_REGION="us-east-1"

# Application Configuration
NODE_ENV="development"
API_PORT=3001
WEB_PORT=3000
CORS_ORIGIN="http://localhost:3000"

# Email Configuration (for user notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn"
MIXPANEL_TOKEN="your-mixpanel-token"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Evaluation Limits
MAX_WRITING_LENGTH=1000
MAX_SPEAKING_DURATION=300
AI_TIMEOUT_MS=30000