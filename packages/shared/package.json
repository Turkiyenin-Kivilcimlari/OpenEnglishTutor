{
  "name": "@openenglishttutor/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for OpenEnglishTutor",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
